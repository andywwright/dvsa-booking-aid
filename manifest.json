{
  "manifest_version": 2,
  "name": "DVSA Booking Aid",
  "version": "5.2",
  "description": "Helps you monitor and pre-select driving test slots on the DVSA website.",
  "icons": {
    "48": "icons/icon48.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DVSA Booker"
  },
  "content_scripts": [
    {
      "matches": ["*://*.dvsa.gov.uk/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["alert.mp3"]
}