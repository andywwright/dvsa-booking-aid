{
  "manifest_version": 2,
  "name": "DVSA Booking Aid",
  "version": "5.1",
  "description": "A Firefox extension to help monitor and book DVSA driving test slots.",
  "icons": {
    "48": "icons/icon48.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "*://*.dvsa.gov.uk/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.dvsa.gov.uk/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}